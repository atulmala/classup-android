<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    android:longClickable="true">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="83dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView46"
        app:layout_constraintTop_toTopOf="@+id/textView46" />

    <TextView
        android:id="@+id/lbl_class"
        android:layout_width="107dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:text="@string/class_standard"
        app:layout_constraintStart_toEndOf="@+id/txt_date"
        app:layout_constraintTop_toTopOf="@+id/txt_date" />

    <TextView
        android:id="@+id/txt_class"
        android:layout_width="68dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lbl_class"
        app:layout_constraintTop_toTopOf="@+id/lbl_class" />

    <TextView
        android:id="@+id/lbl_subject"
        android:layout_width="63dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/sub"
        app:layout_constraintStart_toStartOf="@+id/textView46"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="232dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lbl_subject"
        app:layout_constraintTop_toTopOf="@+id/lbl_subject" />

    <TextView
        android:id="@+id/txt_teacher"
        android:layout_width="226dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView57"
        app:layout_constraintTop_toTopOf="@+id/textView57" />

    <TextView
        android:id="@+id/txt_topic"
        android:layout_width="235dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView51"
        app:layout_constraintTop_toTopOf="@+id/textView51" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="61dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="@string/topic"
        app:layout_constraintStart_toStartOf="@+id/textView57"
        app:layout_constraintTop_toBottomOf="@+id/textView57" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="88dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="@string/video_link"
        app:layout_constraintStart_toStartOf="@+id/textView51"
        app:layout_constraintTop_toBottomOf="@+id/textView51" />

    <TextView
        android:id="@+id/txt_video_link"
        android:layout_width="265dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:autoLink="web"
        android:clickable="true"
        android:linksClickable="true"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView53"
        app:layout_constraintTop_toTopOf="@+id/textView53" />

    <TextView
        android:id="@+id/textView56"
        android:layout_width="88dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:text="@string/doc_link"
        app:layout_constraintStart_toStartOf="@+id/textView53"
        app:layout_constraintTop_toBottomOf="@+id/textView53" />

    <TextView
        android:id="@+id/txt_doc_link"
        android:layout_width="207dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:autoLink="web"
        android:clickable="true"
        android:linksClickable="true"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView56"
        app:layout_constraintTop_toTopOf="@+id/textView56" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/teacher"
        app:layout_constraintStart_toStartOf="@+id/lbl_subject"
        app:layout_constraintTop_toBottomOf="@+id/lbl_subject" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>