<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
   >
    <CheckBox
        android:id="@+id/chk_select"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginStart="283dp"
        android:layout_marginTop="2dp"
        android:longClickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="1dp" />


    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/textview"
        android:textSize="20sp"
        android:textStyle="bold"
        android:focusable="false"
        android:clickable="false"
        android:longClickable="true"
        app:layout_constraintLeft_toRightOf="@+id/chk_select"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:longClickable="true"
        android:text="@string/parent"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/roll_no"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/parent_name"
        android:layout_width="184dp"
        android:layout_height="23dp"
        android:layout_marginStart="165dp"
        android:clickable="true"
        android:longClickable="true"
        android:text="@string/textview"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView32"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/roll_no"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="75dp"
        android:clickable="true"
        android:longClickable="true"
        android:text="@string/textview"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView34"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:longClickable="true"
        android:text="@string/roll_no"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp" />


</android.support.constraint.ConstraintLayout>