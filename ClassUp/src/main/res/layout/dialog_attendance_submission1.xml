<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_attendance_submit"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_class"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/txt_att_submission_class"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/class_standard"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/txt_att_submission_class"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/txt_att_submission_class"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/txt_att_submission_subject"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/sub"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/textView19"
        app:layout_constraintLeft_toRightOf="@+id/textView19"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="@string/date"
        android:textSize="18sp"
        android:layout_marginLeft="77dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="77dp" />

    <TextView
        android:id="@+id/txt_att_submission_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/communication_date"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/textView23"
        app:layout_constraintLeft_toRightOf="@+id/textView23"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/txt_att_submission_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView26"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="@+id/textView26"
        android:layout_marginStart="2dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/present_count"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/txt_att_submission_total"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@+id/txt_att_submission_total"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/txt_att_present_count"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/present_count"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView28"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="@+id/textView28"
        android:layout_marginStart="2dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/absent_count"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/txt_att_present_count"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@+id/txt_att_present_count"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/txt_att_absent_count"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="@string/absent"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/textView30"
        app:layout_constraintLeft_toRightOf="@+id/textView30"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp" />

    <Button
        android:id="@+id/btn_att_confirm"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="@string/submit"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <Button
        android:id="@+id/btn_att_cancel"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="@string/cancel"
        app:layout_constraintLeft_toRightOf="@+id/btn_att_confirm"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toTopOf="@+id/btn_att_confirm"
        android:layout_marginTop="-2dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="179dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="179dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</android.support.constraint.ConstraintLayout>