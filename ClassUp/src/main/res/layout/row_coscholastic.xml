<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lbl_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/student_name"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:text="@string/parent"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_student"
        app:layout_constraintTop_toBottomOf="@+id/lbl_student" />

    <TextView
        android:id="@+id/txt_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_parent"
        app:layout_constraintLeft_toRightOf="@+id/lbl_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/lbl_work_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/work_education_or_pre_vocational_education"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_parent" />

    <RadioGroup
        android:id="@+id/radioGroup_work"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_work_education"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_work_education">

        <RadioButton
            android:id="@+id/work_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/a"/>

        <RadioButton
            android:id="@+id/work_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/b"/>

        <RadioButton
            android:id="@+id/work_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/c"/>

    </RadioGroup>

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/art_education"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_work_education"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_work"/>

    <RadioGroup
        android:id="@+id/radioGroup_art"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/textView40"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView40">

        <RadioButton
            android:id="@+id/art_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/a"/>

        <RadioButton
            android:id="@+id/art_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/b"/>

        <RadioButton
            android:id="@+id/art_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/c"/>

    </RadioGroup>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/health_physical_education"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView40"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_art"/>

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discipline"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView41"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_health"/>

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_teacher_s_remarks"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView42"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_dscpln"/>

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/promoted_to_class"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/edit_ct_remarks" />

    <EditText
        android:id="@+id/edit_ct_remarks"
        android:layout_width="307dp"
        android:layout_height="43dp"
        android:inputType="textCapSentences"
        app:layout_constraintLeft_toLeftOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/textView43"/>

    <EditText
        android:id="@+id/txt_promoted_to"

        android:layout_width="133dp"
        android:layout_height="41dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/textView44"
        app:layout_constraintBottom_toBottomOf="@+id/textView44"
        app:layout_constraintTop_toTopOf="@+id/textView44"/>

    <RadioGroup
        android:id="@+id/radioGroup_health"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/textView41"
        app:layout_constraintTop_toBottomOf="@+id/textView41">

        <RadioButton
            android:id="@+id/health_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/a"/>

        <RadioButton
            android:id="@+id/health_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/b"/>

        <RadioButton
            android:id="@+id/health_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/c"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup_dscpln"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/textView42"
        app:layout_constraintTop_toBottomOf="@+id/textView42">

        <RadioButton
            android:id="@+id/dscpln_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/a"/>

        <RadioButton
            android:id="@+id/dscpln_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/b"/>

        <RadioButton
            android:id="@+id/dscpln_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/c"/>

    </RadioGroup>
</android.support.constraint.ConstraintLayout>