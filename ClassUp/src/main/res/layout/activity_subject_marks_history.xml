<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tbl_p_marks_history_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:shrinkColumns="1">
    <TableRow
        android:id="@+id/header_row_p_marks_history"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="-5dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/txt_p_subject_marks"
            android:text="Name"
            android:paddingLeft="10dip"
            android:paddingBottom="10dp"
            android:layout_gravity="center"/>
    </TableRow>
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph" />

    <View
        android:layout_height="5dip"
        android:background="#FF909090"/>

    <ScrollView android:layout_height="408dp"
        android:layout_width="fill_parent">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:id="@+id/tbl_p_stu_marks_history">
        </TableLayout>

    </ScrollView>
    <View
        android:layout_height="5dip"
        android:background="#FF909090"/>

    <TableRow
        android:id="@+id/header_row_graph"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="-5dp"
        android:layout_gravity="center_horizontal"/>
</TableLayout>