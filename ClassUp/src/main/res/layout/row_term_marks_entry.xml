<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <CheckBox
        android:id="@+id/absence_switch"
        android:layout_width="87dp"
        android:layout_height="35dp"
        android:layout_marginLeft="41dp"
        android:text="@string/txt_absent"
        app:layout_constraintLeft_toRightOf="@+id/term_marks"
        app:layout_constraintTop_toTopOf="@+id/term_marks" />

    <EditText
        android:id="@+id/pa_marks2"
        android:layout_width="50dp"
        android:layout_height="43dp"

        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/term_marks"
        app:layout_constraintTop_toBottomOf="@+id/term_marks" />

    <EditText
        android:id="@+id/sub_enrich_marks"
        android:layout_width="55dp"
        android:layout_height="43dp"

        android:inputType="textCapCharacters|numberDecimal"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/mult_asses_marks"
        app:layout_constraintTop_toTopOf="@+id/notebook_marks" />

    <EditText
        android:id="@+id/notebook_marks"
        android:layout_width="55dp"
        android:layout_height="43dp"

        android:layout_marginTop="4dp"
        android:inputType="textCapCharacters|numberDecimal"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/pa_marks"
        app:layout_constraintTop_toBottomOf="@+id/pa_marks" />

    <EditText
        android:id="@+id/pa_marks"
        android:layout_width="55dp"
        android:layout_height="43dp"

        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/term_marks"
        app:layout_constraintTop_toBottomOf="@+id/term_marks" />

    <EditText
        android:id="@+id/mult_asses_marks"
        android:layout_width="55dp"
        android:layout_height="43dp"

        android:layout_marginStart="8dp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView45"
        app:layout_constraintTop_toTopOf="@+id/pa_marks" />

    <EditText
        android:id="@+id/term_marks"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/marks_entry_roll_no" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/periodic_assessment"
        app:layout_constraintLeft_toLeftOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/marks_entry_name"
        android:layout_width="280dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="@+id/lbl_roll_no"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/student_name" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/txt_roll_no"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/marks_entry_name"
        app:layout_constraintTop_toBottomOf="@+id/marks_entry_name" />

    <TextView
        android:id="@+id/marks_entry_roll_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/txt_textview"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/textView32"
        app:layout_constraintTop_toTopOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_parent"
        app:layout_constraintLeft_toRightOf="@+id/marks_entry_roll_no"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="@+id/marks_entry_roll_no" />

    <TextView
        android:id="@+id/parent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="5dp"

        android:layout_marginTop="0dp"
        android:text="@string/txt_parent_name"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView34"
        app:layout_constraintTop_toTopOf="@+id/textView34" />

    <TextView
        android:id="@+id/lbl_marks_prac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/portfolio"
        app:layout_constraintLeft_toLeftOf="@+id/textView33"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub_enrich"
        app:layout_constraintStart_toStartOf="@+id/textView45"
        app:layout_constraintTop_toTopOf="@+id/lbl_marks_prac" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="24dp"
        android:text="@string/term_marks"
        app:layout_constraintLeft_toLeftOf="@+id/textView32"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/periodic_assessment"
        app:layout_constraintLeft_toLeftOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="@string/multi_asses"
        app:layout_constraintStart_toEndOf="@+id/pa_marks"
        app:layout_constraintTop_toTopOf="@+id/textView33" />
</android.support.constraint.ConstraintLayout>