<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.classup.AddStudent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:text="@string/registration_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="166dp" />

    <EditText
        android:id="@+id/reg_no"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginLeft="28dp"
        android:ems="10"
        android:inputType="textCapCharacters"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        tools:ignore="RelativeOverlap"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="156dp"
        android:layout_marginStart="25dp" />


    <TextView
        android:text="@string/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_first_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView7"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="218dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textCapWords"
        app:layout_constraintLeft_toLeftOf="@+id/reg_no"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_no" />

    <TextView
        android:text="@string/surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_surname"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_first_name"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_first_name" />

    <EditText
        android:id="@+id/the_surname"
        android:layout_width="217dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textCapWords|textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintLeft_toLeftOf="@+id/first_name"
        app:layout_constraintTop_toBottomOf="@+id/first_name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/parent_name"
        android:layout_width="217dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textCapWords|textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/the_surname"
        app:layout_constraintTop_toBottomOf="@+id/the_surname" />

    <TextView
        android:text="@string/parent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_surname"
        android:layout_marginLeft="-16dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_surname" />

    <TextView
        android:text="@string/mobile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintLeft_toLeftOf="@+id/textView13" />

    <EditText
        android:id="@+id/mobile1"
        android:layout_width="217dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintLeft_toLeftOf="@+id/parent_name"
        app:layout_constraintTop_toBottomOf="@+id/parent_name" />

    <TextView
        android:text="@string/mobile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintLeft_toLeftOf="@+id/textView14"
        android:layout_marginLeft="0dp" />

    <EditText
        android:id="@+id/mobile2"
        android:layout_width="217dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintLeft_toLeftOf="@+id/mobile1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/mobile1" />


    <NumberPicker
        android:id="@+id/class_picker"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSelectSection" />


    <NumberPicker
        android:id="@+id/section_picker"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginLeft="195dp"
        android:layout_marginStart="195dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/class_picker" />

    <TextView
        android:id="@+id/txtSelectSection"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="@string/select_class_section"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />


    <TextView
        android:text="@string/roll_no_optional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_roll_no"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView17"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <EditText
        android:id="@+id/roll_no"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="@+id/mobile2"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/mobile2"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>
