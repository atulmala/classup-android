<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/marks_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="@+id/student_name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_roll_no"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/marks_entry_name"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/marks_entry_roll_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_textview"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView32"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/marks_entry_name" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_parent"
        app:layout_constraintLeft_toRightOf="@+id/marks_entry_roll_no"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/marks_entry_name" />

    <TextView
        android:id="@+id/parent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_parent_name"
        android:textStyle="bold"

        app:layout_constraintLeft_toRightOf="@+id/textView34"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/marks_entry_name" />

    <TextView
        android:id="@+id/lbl_marks_or_grade"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:text="@string/marks_grade"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <EditText
        android:id="@+id/marks_entry_marks_or_grade"
        android:layout_width="74dp"
        android:layout_height="43dp"

        android:inputType="textPersonName"
        android:text="@string/student_name"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/lbl_marks_or_grade"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <CheckBox
        android:id="@+id/absence_switch"
        android:layout_width="87dp"
        android:layout_height="35dp"
        android:text="@string/txt_absent"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/parent_name" />
</android.support.constraint.ConstraintLayout>