<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:layout_marginBottom="0dp"
    android:background="@color/floral_white">
    >

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtSelectClass"
                android:textSize="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="-10dp"
                android:scaleY="0.8"
                android:text="@string/select_class"
                android:textStyle="bold" />
            <NumberPicker
                android:id="@+id/pick_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:scaleX="1"
                android:scaleY="0.8">
            </NumberPicker>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="-20dp"
            android:layout_weight="0.5">
            <TextView
                android:id="@+id/txtSelectSection"
                android:layout_width="fill_parent"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-10dp"
                android:scaleY="0.8"
                android:text="@string/select_section"
                android:textStyle="bold" />
            <NumberPicker
                android:id="@+id/pick_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:contextClickable="false"
                android:scaleX="1"
                android:scaleY="0.8">
            </NumberPicker>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_compose_message"
            android:text="@string/select_student"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="0dp"
            android:onClick="composeMessage"
            android:layout_marginBottom="0dp" />
        <Button
            android:id="@+id/btn_whole_class"
            android:text="Send Message to Whole Class"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="0dp"
            android:onClick="composeMessageForWholeClass"
            android:layout_marginBottom="0dp" />
    </LinearLayout>
</LinearLayout>
